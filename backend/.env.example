ANGEL_ONE_TOTP_SECRET=

# Authentication & Security
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here
ENCRYPTION_KEY=your-32-character-encryption-key-here
SESSION_SECRET=your-session-secret-here

# Database Configuration
# ---------------------
# Primary database connection settings
CACHE_DB_HOST=localhost
CACHE_DB_PORT=5432
CACHE_DB_NAME=artha_cache
CACHE_DB_USER=artha_user
CACHE_DB_PASSWORD=your_secure_password

# Alternative database URL format (overrides individual settings above)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Database Connection Pool Settings
# --------------------------------
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true
DB_POOL_TIMEOUT=30

# Database Retry Configuration
# ---------------------------
DB_MAX_RETRIES=3
DB_RETRY_DELAY=1.0
DB_RETRY_BACKOFF=2.0
DB_RETRY_MAX_DELAY=10.0

# Database Health Monitoring
# --------------------------
DB_HEALTH_CHECK_INTERVAL=60
DB_METRICS_ENABLED=true

# System Monitoring and Logging
LOG_LEVEL=INFO
LOG_FORMAT=structured
LOG_FILE=logs/artha_backend.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
LOG_ENABLE_JSON=true

# Monitoring API Access
MONITORING_API_KEY=your_monitoring_api_key_here

# Alert Thresholds
ALERT_CPU_CRITICAL=90
ALERT_CPU_WARNING=75
ALERT_MEMORY_CRITICAL=90
ALERT_MEMORY_WARNING=80
ALERT_DISK_CRITICAL=95
ALERT_DISK_WARNING=85
ALERT_RESPONSE_TIME_CRITICAL=5.0
ALERT_RESPONSE_TIME_WARNING=2.0
ALERT_ERROR_RATE_CRITICAL=10
ALERT_ERROR_RATE_WARNING=5

# Agent Configuration
MAX_GROUNDING_QUERIES=5
COLLABORATION_TIMEOUT=30
STREAMING_CHUNK_SIZE=1024

# Cache Configuration
CACHE_TTL_SECONDS=3600
REDIS_CACHE_PREFIX=artha_ai:

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# External API Timeouts (in seconds)
API_TIMEOUT=30
HTTP_TIMEOUT=60

# Feature Flags
ENABLE_DEMO_MODE=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_LOGGING=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/artha_ai.log

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=

# Monitoring & Analytics
SENTRY_DSN=
ANALYTICS_API_KEY=

# Development Settings
RELOAD_ON_CHANGE=true
ENABLE_CORS_CREDENTIALS=true